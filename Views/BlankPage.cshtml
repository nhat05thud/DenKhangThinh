@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var blankPage = (BlankPage)Model;
    var banner = blankPage.Banner;
}
@if (banner != null)
{
    <div class="about-banner">
        <img src="@(banner.GetCropUrl(1920,400, imageCropMode: ImageCropMode.Crop, furtherOptions: "&slimmage=true"))" alt="@blankPage.Name">
    </div>
}
else
{
    <div class="about-banner">
        <img src="https://placehold.co/1920x400" alt="@blankPage.Name">
    </div>
}
<div class="mgb-30"></div>
<div class="container">
    <h1 class="blog-title">@blankPage.Name</h1>
    <div class="wrap-content">
        @blankPage.Content
    </div>
</div>
<div class="mgb-30"></div>